  "dependenciesMeta": {
    "@next/swc-win32-x64-msvc": {
      "unplugged": true
    },
    "next": {
      "unplugged": true
    }
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@next/bundle-analyzer": "^15.3.2",
    "@next/eslint-plugin-next": "^15.3.4",
    "@swc/core": "^1.12.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/next-pwa": "^5",
