{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "jest.config.js",
    "jest.setup.js",
    "*.test.ts",
    "*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}